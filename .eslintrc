{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true,
        "node": true
    },
    "globals": {
        "server": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "eslint:recommended",
    "rules": {
        "eol-last": ["error", "always"],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "no-unused-vars": ["error", { "varsIgnorePattern": "sinonAsPromised" }],
        "max-len": ["error", 120, { "ignoreComments": true }],
        "quote-props": ["error", "consistent-as-needed"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}